{
  "compilerOptions": {
    "jsx": "react-jsx",
    // Browser APIs
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Bundler",

    // Bundler Integration
    "noEmit": true,
    "types": ["vite/client"],
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "extends": "./base.jsonc",
  "include": ["**/*.ts", "**/*.tsx"]
}
