{
  "compilerOptions": {
    // Emit
    "declaration": true,
    "declarationMap": true,
    "jsx": "none",
    // Browser APIs
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",

    // Bundler Integration
    "moduleResolution": "Bundler",
    "noEmit": false,
    "target": "ES2020"
  },
  "exclude": ["node_modules", "dist"],
  "extends": "./base.jsonc",
  "include": ["**/*.ts", "**/*.tsx"]
}
