{
  "compilerOptions": {
    // Emit
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    // Browser APIs + React
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    // Bundler Integration
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": false,
    "target": "ES2020"
  },
  "exclude": ["node_modules", "dist", "**/*.stories.tsx"],
  "extends": "./base.jsonc",
  "include": ["**/*.ts", "**/*.tsx"]
}
